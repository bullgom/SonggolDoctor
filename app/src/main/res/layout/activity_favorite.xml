<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/favorite_activity_title_constraint_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
            <ImageButton
                    android:layout_width="@dimen/place_autocomplete_prediction_height"
                    android:layout_height="0dp"
                    android:id="@+id/book_activity_back_button"
                    app:srcCompat="@android:drawable/ic_menu_revert"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:id="@+id/FavoriteListTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/favorite_list_title"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="24sp" android:textAlignment="center" android:textStyle="bold"
                    android:layout_marginEnd="75dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="75dp"
                    app:layout_constraintStart_toStartOf="@+id/book_activity_back_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.design.widget.TabLayout
                app:tabMaxWidth="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/favoriteTabLayout">
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
                android:layout_weight="15"
                android:id = "@+id/favoriteViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/favoriteTabLayout" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>