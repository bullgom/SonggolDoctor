<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".InfoFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/info_fragment_title_constraint_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/InfoListTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/info_list_title"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="24sp" android:textAlignment="center" android:textStyle="bold"
                    android:layout_marginEnd="75dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="75dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="@string/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:id="@+id/info_fragment_logout" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/InfoListTitleText"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</FrameLayout>