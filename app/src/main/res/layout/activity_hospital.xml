<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hospital_activity_scrollview"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/hospital_activity_bottom_buttons"
            app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.gms.maps.MapView
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:id="@+id/hospital_activity_mapview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <View
                    android:id="@+id/hospital_activity_mapview_seperator"
                    style="@style/Divider"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_mapview"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/hospital_activity_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hospitalName"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_mapview_seperator"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="16sp"
                    android:layout_marginStart="8dp" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/hospital_activity_hospital_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/hospitalAddress"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_hospital_name"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="12sp"
                    android:layout_marginStart="8dp" android:textStyle="bold"/>
            <View   android:id="@+id/hospital_activity_linesperator"
                    style="@style/Divider"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_hospital_address"/>
            <TextView
                    android:id="@+id/hospital_activity_text_worktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/worktime"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_linesperator"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="14sp"
                    android:layout_marginStart="8dp" android:textStyle="bold"/>
            <GridView
                    android:id="@+id/hospital_activity_tablelayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:stretchMode="columnWidth"
                    android:layout_marginTop="14dp"
                    android:numColumns="2"
                    android:verticalSpacing="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/hospital_activity_text_worktime"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/hospital_activity_bottom_buttons"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <Button android:id="@+id/hospital_activity_phone_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" android:text="@string/actionDial"
                android:background="@color/colorAccent" android:textColor="@color/colorWhite" android:textSize="18sp"
                android:textStyle="bold"/>
        <Button android:id="@+id/hospital_activity_book_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:text="@string/book"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" android:textColor="@color/colorWhite"
                android:background="@android:color/holo_blue_dark" android:textSize="18sp" android:textStyle="bold"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>