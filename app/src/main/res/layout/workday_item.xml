<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent">
        <View android:layout_width="4dp"
              android:layout_height="55dp"
              android:background="@android:color/black"
              android:id="@+id/workday_item_lineseperator"
              app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@string/weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workday_item_day"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/workday_item_lineseperator" android:layout_marginStart="8dp"
                android:textSize="12sp"/>
        <TextView
                android:text="@string/worktimeexample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workday_item_time"
                app:layout_constraintTop_toBottomOf="@+id/workday_item_day"
                app:layout_constraintLeft_toRightOf="@+id/workday_item_lineseperator" android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" android:textSize="12sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>