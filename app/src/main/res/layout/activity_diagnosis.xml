<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diag_act_hospital" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/diag_act_date"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
    />
    <TextView
            android:text="notEnoughMinerals"
            android:layout_width="284dp"
            android:layout_height="408dp"
            android:ems="10"
            android:id="@+id/diag_act_comment" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/commentAdvice"/>
    <TextView
            android:text="1010"
            android:layout_width="114dp"
            android:layout_height="24dp"
            android:textSize="20sp"
            android:ems="10"
            android:id="@+id/diag_act_date"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@+id/diag_act_backButton"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="drugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diag_act_drug" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/drugAdvice"
            android:textSize="20sp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="howMany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/diag_act_howMany"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/drugAdvice"
            android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/diag_act_drug"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/diag_act_backButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/drugAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/drugAdvice" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/diag_act_comment"/>
    <TextView
            android:text="@string/commentAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/commentAdvice" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/diag_act_backButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>